.ldcv.autogap.scroll: .base.w-640: .inner
  script(type="@plotdb/block"): :lsc
    module.exports = pkg:
      i18n:
        en:
          title: "Resources Failed to Load"
          desc: "This action requires some resources that failed to load."
          p: [
            "Some resources failed to load properly, preventing your action from being executed. Possible reasons include:"
            "Possible workarounds:"
            "Alternatively, you can also"
            "contact us"
            "and let us help you."
          ]
          reason: [
            "Plugins (like Adblock) block them (e.g., CAPTCHA)"
            "You use VPN and got a blacklisted IP address"
          ]
          workaround: [
            "Sign in with incognito mode to disable plugins."
            "Try again with different IP addresses."
            ["Login with", "this link", "which clears cookie for you."]
          ]
          close: "Close This Popup"
        "zh-TW":
          title: "資源載入失敗"
          desc: "此動作需要載入特定資源，但載入失敗了。"
          p: [
            "某些網站資源無法正確載入，因此您的動作沒有執行成功。以下是可能的原因："
            "您可嘗試的可能解決方法："
            "此外，您亦可"
            "聯繫我們"
            "來讓我們協助您。"
          ]
          reason: [
            "瀏覽器擴充(如Adblobk)可能會誤攔正常程序 (如真人驗證機制) 。"
            "來自 VPN 的 IP 地址可能曾被機器人濫用過，導致黑名單。"
          ]
          workaround: [
            "用無痕模式或停用所有的擴充後再登入。"
            "換個 IP Address 再試一次。"
            ["登入時使用", "這個連結", "，幫您清除異常資料"]
          ]
          close: "關閉對話框"

  .text-center.mb-3
    h2.mb-0(t="title")
    p.text-muted(t="desc")
  p(t="p.0")
  ul
    li(t="reason.0")
    li(t="reason.1")
  p(t="p.1")
  ul
    li(t="workaround.0")
    li(t="workaround.1")
    li #[span(t="workaround.2.0")] #[a(href="/auth/reset",t="workaround.2.1")] #[span(t="workaround.2.2")]
  p #[span(t="p.2")] #[a(href="#",onclick="lda.ldcvmgr.toggle('contact')",t="p.3")] #[span(t="p.4")]
  .d-flex.g-2.flex-wrap.mt-5
    .btn.btn-primary.btn.btn-lg.flex-grow-1(data-ldcv-set="",t="close")
