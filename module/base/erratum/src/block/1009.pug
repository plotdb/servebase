.ldcv.autogap.scroll: .base.w-640: .inner
  script(type="@plotdb/block"): :lsc
    module.exports = pkg:
      i18n:
        en:
          title: "CAPTCHA Issue"
          desc: "Human Verification (CAPTCHA) Failed"
          p: [
            "CAPTCHA is required but failed. Either it couldn't verify you as a human, or failed to init. Thus, we couldn't finish your last request. Coomon reasons for broken CAPTCHA:"
            "Possible workarounds:"
            "Alternatively, you can also"
            "contact us"
            "and let us help you."
          ]
          reason: [
            "You use plugins (e.g., Adblock) which breaks CAPTCHA."
            "IP address from VPN may be used by bots before."
          ]
          workaround: [
            "Sign in with incognito mode to Disable plugins."
            "Try again with different IP addresses."
            ["Login with", "this link", "which clears cookie for you."]
          ]
          close: "Close This Popup"
        "zh-TW":
          title: "CAPTCHA Issue"
          desc: "真人驗證 (CAPTCHA) 失敗"
          p: [
            "此動作需要真人驗證(CAPTCHA) 但驗證失敗了。它可能是無法分辨您是否為真人或無法順利啟動。因此您的動作沒有執行成功。以下是可能的原因："
            "您可嘗試的可能解決方法："
            "此外，您亦可"
            "聯繫我們"
            "來讓我們協助您。"
          ]
          reason: [
            "瀏覽器擴充(如Adblobk)可能會阻擋 CAPTCHA 。"
            "來自 VPN 的 IP 地址可能曾被機器人用過。"
          ]
          workaround: [
            "用無痕模式或停用所有的擴充後再登入。"
            "換個 IP Address 再試一次。"
            ["登入時使用", "這個連結", "，幫您清除異常資料"]
          ]
          close: "關閉對話框"

  .text-center.mb-3
    h1.mb-0(t="title")
    p.text-muted(t="desc")
  p(t="p.0")
  ul
    li(t="reason.0")
    li(t="reason.1")
  p(t="p.1")
  ul
    li(t="workaround.0")
    li(t="workaround.1")
    li #[span(t="workaround.2.0")] #[a(href="/auth/reset",t="workaround.2.1")] #[span(t="workaround.2.2")]
  p #[span(t="p.2")] #[a(href="#",onclick="lda.ldcvmgr.toggle('contact')",t="p.3")] #[span(t="p.4")]
  .d-flex.g-2.flex-wrap.mt-5
    .btn.btn-primary.btn.btn-lg.flex-grow-1(data-ldcv-set="",t="close")
